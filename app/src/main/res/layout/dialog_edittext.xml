<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#90000000"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="282dp"
        android:background="@drawable/shape_10dp_corners"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin_12dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_select_sub_setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dimen_margin_12dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"

            android:gravity="center"
            android:layout_gravity="center"
            android:text="string/living_room_member_leave"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">



            <com.ilinklink.tg.widget.customClick.CustomClickTextView
                android:onClick="@{click.onClick}"

                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/green_btn_selector"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/select_subject_yintixiangshang"
                android:textColor="@color/green_659B43"
                android:textSize="20sp" />




            <com.ilinklink.tg.widget.customClick.CustomClickTextView
                android:onClick="@{click.onClick}"

                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/green_btn_selector"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/select_subject_yintixiangshang"
                android:textColor="@color/green_659B43"
                android:textSize="20sp" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>