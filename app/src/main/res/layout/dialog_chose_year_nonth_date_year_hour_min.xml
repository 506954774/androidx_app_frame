<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_back"



    >
  <!--  android:background="@drawable/dialog_back"-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"

        android:paddingBottom="1dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chose_time"
            android:textSize="18sp"
            android:textColor="@android:color/black"

            android:visibility="gone"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/time_picker_dialog_boundry_color"

            />


        <LinearLayout
            android:id="@+id/ll_time_picker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >


        </LinearLayout>



    </LinearLayout>





    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/time_picker_dialog_boundry_color"
        android:layout_alignParentBottom="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2"
        android:background="#999999"

        >

        <Button
            android:layout_weight="1"

            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:background="@drawable/button_selector_white_shape"
            android:layout_height="40dp"
            android:textColor="@color/theme_blue"
            android:text="@string/cancel"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_commit"
            android:layout_width="wrap_content"
            android:background="@drawable/button_selector_white_shape"
            android:layout_height="40dp"
            android:textColor="@color/theme_blue"
            android:text="@string/time_commit_2_0"
            android:layout_marginLeft="0.5dp"
            />




    </LinearLayout>

</LinearLayout>
