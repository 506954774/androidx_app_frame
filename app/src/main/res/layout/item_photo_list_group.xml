<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_item_photo_folder_text"
        style="@style/white_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_item_photo_myimage_view"
        android:padding="4dp" />

    <ImageView
        android:id="@+id/iv_item_photo_myimage_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/tv_item_photo_folder_text"
        android:layout_centerInParent="true"
        android:background="@mipmap/albums_bg_nm"
        android:padding="30dp"
        android:scaleType="fitXY" />

</RelativeLayout>