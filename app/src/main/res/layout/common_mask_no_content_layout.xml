<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_smile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="3dp"
            android:background="@mipmap/error" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/no_content_hint"
            android:textColor="#999999"
            android:textSize="13sp" />
        <TextView
            android:layout_centerVertical="true"

            android:layout_toRightOf="@+id/tv_prompt"
            android:id="@+id/tv_reload_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/reload"
            android:paddingRight="20dp"
            android:textColor="@drawable/loading_view_text_color_selector"
            android:textSize="13sp"
            />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>