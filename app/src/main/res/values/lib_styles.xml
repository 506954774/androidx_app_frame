<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    <style name="PullToRefresh" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
    </style>-->


    <!-- 自定义星级(大尺寸)评分风格 -->
    <style name="RatingBarBig" parent="@android:style/Widget.RatingBar">

        <!-- 指向star_big_rating_bar_full.xml文件 -->
        <item name="android:progressDrawable">@drawable/star_ratting_big</item>
    </style>
    <!-- 自定义星级(小尺寸)评分风格 -->
    <style name="RatingBarSmall" parent="@android:style/Widget.RatingBar">

        <!-- 指向star_rating_bar_full.xml文件 -->
        <item name="android:progressDrawable">@drawable/star_ratting_small</item>
    </style>


    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>


    <style name="white_font">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- 标签展示控件 -->
    <declare-styleable name="TagsListView">
        <attr name="mLiearLayoutPaddingLeft" format="integer" />
        <attr name="mLiearLayoutPaddingRight" format="integer" />
        <attr name="mLiearLayoutPaddingTop" format="integer" />
        <attr name="mLiearLayoutPaddingBottom" format="integer" />
        <attr name="mMaxChooseCount" format="integer" />

        <attr name="mItemPadingLeft" format="integer" />
        <attr name="mItemPadingTop" format="integer" />
        <attr name="mItemPadingRight" format="integer" />
        <attr name="mItemPadingBottom" format="integer" />
        <attr name="mItemHeight" format="integer" />

        <attr name="mTextColorNormal" format="color" />
        <attr name="mTextColorChecked" format="color" />

        <attr name="mItemBackGroundSelector" format="reference" />
        <attr name="mItemBackGroundDrawableNormal" format="reference" />
        <attr name="mItemBackGroundDrawableChecked" format="reference" />
        <attr name="mDrivers" format="reference" />

        <attr name="mIsClickable" format="boolean" />
        <attr name="mTextSize" format="integer" />
        <attr name="mIsOnlyOne" format="boolean" />

    </declare-styleable>


    <!--15sp 大号文本,黑色,-->
    <style name="text_black_15sp">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff444444</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="city_select_item">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/city_item_background_selector</item>
    </style>

    <!--baseDialog样式-->
    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!-- 自定义dialog的风格 -->
    <!-- parent="@android:Theme.Dialog"-->
    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 自定义dialog的风格 -->
    <!-- parent="@android:Theme.Dialog"-->
    <style name="MyDialog2">
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题 -->
        <item name="android:windowNoTitle">true</item>

    </style>


    <!--动画风格-->
    <style name="AnimEventPosterBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in_slow</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="btn_style__red_whitetext_40dpheight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="btn_style__green_whitetext_40dpheight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>


     <!--mainActivity 底部的radioBUTTON-->
    <style name="radio_btn_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/main_rb_text_color_selector</item>
        <item name="android:textSize">13sp</item>
    </style>
    <declare-styleable name="SildeRingScaleView">
        <!--圆环的宽度-->
        <attr name="slideRingWidth" format="float"/>
        <!--滑动圆弧的背景-->
        <attr name="slideRingCorlor2" format="integer"/>
        <!--底部圆弧的背景-->
        <attr name="slideRingBgCorlor" format="integer"/>
        <!--当前文字的背景-->
        <attr name="slideWordCorlor" format="integer"/>
        <!--当前文字的大小-->
        <attr name="slideWordSize" format="integer"/>
        <!--同心圆外圆的半径-->
        <attr name="slideRadius" format="integer"/>
        <!--最大显示进度-->
        <attr name="slideMaxProgress" format="integer"/>
        <!--最小显示进度-->
        <attr name="slideMinProgress" format="integer"/>
        <!--当前显示进度-->
        <attr name="slideProgress" format="integer"/>

        <!--刻度线的总数-->
        <attr name="slideScaleLineCount" format="integer"/>
        <!--普通刻度线的长度-->
        <attr name="slideScaleLineLength" format="integer"/>
        <!--特殊刻度线的长度-->
        <attr name="slideSpecialScaleLineLength" format="integer"/>
        <!--线条的宽度-->
        <attr name="slideScaleLineWidth" format="integer"/>
        <!--刻度线距离圆环的宽度-->
        <attr name="slideScaleToRingSpace" format="integer"/>
        <!--普通线的颜色-->
        <attr name="slideScaleLineNormalCorlor" format="integer"/>
        <!--特殊线的颜色-->
        <attr name="slideSpecialScaleCorlor" format="integer"/>
    </declare-styleable>
    <declare-styleable name="RingScaleView">
        <!-- 刻度线的总数-->
        <attr name="scaleLineCount" format="integer"/>
        <!-- 普通刻度线的长度-->
        <attr name="scaleLineLength" format="integer"/>
        <!-- 特殊刻度线的长度-->
        <attr name="specialScaleLineLength" format="integer"/>
        <!-- 线条的宽度-->
        <attr name="scaleLineWidth" format="integer"/>
        <!-- 刻度线距离圆环的宽度-->
        <attr name="scaleToRingSpace" format="integer"/>
        <!-- 普通线的颜色-->
        <attr name="scaleLineNormalCorlor" format="integer"/>
        <!-- 起始线的颜色-->
        <attr name="beginLineNormalCorlor" format="integer"/>

        <!-- 过圆心的圆弧的背景-->
        <attr name="slideRingCorlor" format="integer"/>
        <!-- 底部圆的背景-->
        <attr name="ringBgCorlor" format="integer"/>
        <!-- 当前文字的背景-->
        <attr name="wordCorlor" format="integer"/>
        <!-- 当前文字的大小-->
        <attr name="wordSize" format="integer"/>
        <!-- 圆的半径-->
        <attr name="radius" format="integer"/>

        <!-- 最大显示进度-->
        <attr name="maxProgress" format="integer"/>
        <!-- 最小显示进度-->
        <attr name="minProgress" format="integer"/>
        <!-- 当前显示进度-->
        <attr name="progress" format="integer"/>

        <!-- 外围提示字的颜色-->
        <attr name="outWordColor" format="integer"/>
        <!-- 外围提示字的大小-->
        <attr name="outWordSize" format="integer"/>
        <!-- 外围提示字的宽度-->
        <attr name="outWordWidth" format="integer"/>
        <!-- 外围提示字的高度-->
        <attr name="outWordHeight" format="integer"/>

        <!-- 内部提示字的颜色-->
        <attr name="inputWordColor" format="integer"/>
        <!-- 内部提示字的大小-->
        <attr name="inputWordSize" format="integer"/>
        <!-- 内部提示字的间隔-->
        <attr name="inputWordSpace" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <!-- 刻度线背景颜色-->
        <attr name="scaleLineCorlor" format="integer"/>
        <!--  文字的颜色-->
        <attr name="textCorlor" format="integer"/>
        <!-- 外围提示字的颜色-->
        <attr name="touchable" format="boolean"/>
        <!-- 底部文字-->
        <attr name="title" format="string"/>
    </declare-styleable>

    <style name="BottomDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="camera_next">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColor">@drawable/camera_next_text_color_selector</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="vp_image_position">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/shape_bg_grey_5</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">8px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">8px</item>
        <item name="android:thumb">@drawable/dot_yellow</item>
    </style>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
</resources>