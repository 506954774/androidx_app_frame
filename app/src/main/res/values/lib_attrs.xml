<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 埋点点击控件 -->
    <declare-styleable name="ClickView">
        <attr name="customId" format="string" />
        <attr name="desc" format="string" />
    </declare-styleable>

    <!-- 星级评分控件 -->
    <declare-styleable name="StarEvaluateView">
        <attr name="linesCount" format="integer" />
        <attr name="starsCount" format="integer" />
        <attr name="defaultChosen" format="float" />
        <attr name="stepSize" format="float" />
        <attr name="checkable" format="boolean" />
        <attr name="isBig" format="boolean" />
    </declare-styleable>


    <!-- PagerTab xml配置属性 -->
    <declare-styleable name="PagerTab">
        <attr name="PagerTabdividerPadding" format="dimension" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerColor" format="color|reference" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorLeft" format="dimension" />
        <attr name="indicatorColor" format="color|reference" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextSizeSelected" format="dimension" />
        <attr name="PagerTabtabPadding" format="dimension" />
        <attr name="tabBackgroundResId" format="reference" />
        <attr name="tabTextColorResId" format="integer" />
        <attr name="tabTextStyleBold" format="boolean" />
        <attr name="tabTextGravity" format="integer" />
    </declare-styleable>

    <declare-styleable name="IRecyclerView">
        <attr name="refreshHeaderLayout" format="reference" />
        <attr name="loadMoreFooterLayout" format="reference" />
        <attr name="refreshEnabled" format="boolean" />
        <attr name="loadMoreEnabled" format="boolean" />
        <attr name="refreshFinalMoveOffset" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircularLoadingView">
        <attr name="base_color" format="color" />
        <attr name="progress_color" format="color" />
        <attr name="max" format="float" />
        <attr name="min" format="float" />
        <attr name="duration" format="integer" />
        <attr name="progress_stroke_width" format="integer" />
        <attr name="argQuantity" format="integer" />
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="RoundOvalImageView">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="shapeType" format="integer" />
        <attr name="roundRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="verticalProgress">
        <attr name="progress_radius" format="dimension" />
        <attr name="progress_border_width" format="dimension" />
        <attr name="progress_gradient_enable" format="boolean" />
        <attr name="progress_border_enable" format="boolean" />
        <attr name="progress_start_color" format="color" />
        <attr name="progress_solid_color" format="color" />
        <attr name="progress_end_color" format="color" />
        <attr name="progress_border_color" format="boolean" />
    </declare-styleable>

</resources>